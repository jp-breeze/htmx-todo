@model htmx_todo.Domain.Todos.Responses.TodoResponse?

<form class="todo-card">
    <div class="info">
        <input
            class="todo-edit"
            type="text"
            name="title"
            value="@Model?.Title"
            />
        <input
            class="todo-edit"
            type="text"
            name="description"
            value="@Model?.Description"
            />
        <input
            class="todo-edit"
            type="date"
            name="DueDate"
            value="@Model?.DueDate.ToString("yyyy-MM-dd")"
            />
    </div>
    <div class="buttons">
        @if (Model != null)
        {
            <button
                class="submit"
                hx-put="/todos/@Model.Id"
                hx-target="#todo-gallery">
                Save
            </button>
        }
        else
        {
            <button
                class="submit"
                hx-post="/todos"
                hx-target="#todo-gallery">
                Save
            </button>
        }
        <button class="delete">Cancel</button>
    </div>
</form>